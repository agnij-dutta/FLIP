# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf

# Solidity
*.sol text eol=lf

# Go
*.go text eol=lf

# Shell scripts
*.sh text eol=lf

# Markdown
*.md text eol=lf

# JSON
*.json text eol=lf

# YAML
*.yml text eol=lf
*.yaml text eol=lf

# Jupyter Notebooks (treat as text, but be careful with merges)
*.ipynb text eol=lf

# Binary files
*.pkl binary
*.h5 binary
*.onnx binary
*.pb binary
*.joblib binary
*.db binary
*.sqlite binary
